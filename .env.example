# Database (required — Render.com PostgreSQL)
DB_HOST=your-db-host.render.com
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# Connection pool tuning (optional)
# DB_POOL_MIN controls the minimum idle connections per worker.
# With WEB_CONCURRENCY workers each holding DB_POOL_MIN connections,
# total minimum connections = WEB_CONCURRENCY × DB_POOL_MIN.
DB_POOL_MIN=2
DB_POOL_MAX=10

# CORS (optional — defaults to "*" which allows all origins)
# Comma-separated list of allowed origins for production, e.g.:
# CORS_ORIGINS=https://yourapp.onrender.com,https://custom-domain.com
CORS_ORIGINS=*

# Rate limiting (optional — defaults shown)
RATE_LIMIT_DEFAULT=120 per minute

# Gunicorn workers (optional — defaults shown)
WEB_CONCURRENCY=2
WEB_THREADS=4

# Flask debug mode (set to "true" only for local development)
FLASK_DEBUG=false
